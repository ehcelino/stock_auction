<div class="mb-3">
  <h3>Questões de usuários</h3>
</div>

<% if @qnas.any? %>
  <% @qnas.includes([:auction_lot]).each do |qna| %>
    <div class="mb-3">
      <%= link_to auction_lot_path(qna.auction_lot.id), class:"clean-link" do %>
        <p>Lote <%= qna.auction_lot.code %></p>
      <% end %>
      <p>Pergunta: <%= qna.question %></p>
      <% if qna.status == "hidden" %>
        <span class="text-danger">Pergunta oculta por administrador</span>
      <% end %>
      <% if qna.answer.present? %>
        <p>Resposta: <%= qna.answer %></p>
      <% else %>
        <p><%= link_to "Responder", answer_auction_lot_qna_path(qna.auction_lot_id, qna), id: dom_id(qna) %> </p>
      <% end %>
      <% if qna.hidden? %>
        <p>Esta pergunta foi ocultada pela administração</p>
      <% else %>
        <%= button_to "Ocultar", hidden_auction_lot_qna_path(qna.auction_lot_id, qna), method: :post, class:"btn btn-secondary", id: "ocultar-#{dom_id(qna)}" %>
      <% end %>
    </div>
  <% end %>
<% end %>
